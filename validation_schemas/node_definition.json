                "cpu_limit": {
                    "type": "boolean",
                    "description": "CPU Limit."
                },
                "data_volume": {
                    "type": "boolean",
                    "description": "Data Disk Size."
                },
                "boot_disk_size": {
                    "type": "boolean",
                    "description": "Boot Disk Size."
                }
            }
        },
